<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTimers.App.Views.Settings"
             Title="Settings">
    <TableView Intent="Settings">
        <TableRoot>
            <TableSection Title="Defaults">
                
                <EntryCell Label="Interval" Placeholder="00:00" />
                <EntryCell Label="Repetitions" Keyboard="Numeric" Text="{Binding DefaultReps}" />
            </TableSection>
            <TableSection Title="Addresses">
                <EntryCell Label="Server URL" Keyboard="Url"  />
                <EntryCell Label="User email" Keyboard="Email" Text="{Binding UserEmail}" />
            </TableSection>
            <TableSection Title="OS Info">
                <TextCell Text="{Binding OSVersion}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>